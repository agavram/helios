---
import NavItems from '../components/Navigation/NavItems';
---

<nav class="h-12 top-0 z-10">
  <div class="p-2 w-full h-full bg-transparent">
    <div
      class="max-w-4xl h-full pl-4 pr-4 flex items-center whitespace-nowrap ml-auto mr-auto"
    >
      <a
        href="/"
        class="dark:text-gray-50 text-3xl pr-6"
        style={{ fontFamily: "'Chomsky', sans-serif" }}>Hacker News</a
      >
      <div class="flex-grow"></div>
      <NavItems
        selected={Astro.params.page?.toLowerCase()}
        client:only="solid-js"
      />
    </div>
  </div>
</nav>
